<div id="<%= dom_id api_key %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= api_key.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Api key:</strong>
    <%= api_key.public_key %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Encrypted_Secret key:</strong>
    <%= api_key.encrypted_secret_key %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this api key", api_key, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%# <%= link_to "Edit this api key", edit_api_key_path(api_key), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
